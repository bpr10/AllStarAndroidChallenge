<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bpr10.git.allstarandroidchallenge.MainActivity" >

    
    <Button
        android:id="@+id/show_places_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/distance_field"
        android:layout_alignRight="@+id/distance_field"
        android:layout_below="@+id/distance_field"
        android:layout_marginTop="25dp"
        android:text="Show Places" />

    <EditText
        android:id="@+id/distance_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search_keyword_field"
        android:layout_alignRight="@+id/search_keyword_field"
        android:layout_below="@+id/search_keyword_field"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Distance"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/search_keyword_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

</RelativeLayout>
